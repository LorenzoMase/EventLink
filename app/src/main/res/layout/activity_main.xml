<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3399FF"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="-5dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icons8_menu_208"
            android:scaleType="fitCenter"
            android:contentDescription="contentDescription"
            tools:ignore="HardcodedText"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
           <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/icons8_account_96"
            android:contentDescription="contentDescription"
            tools:ignore="HardcodedText"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.eventlink.MainActivity"
            tools:ignore="FragmentTagUsage" />
        <LinearLayout
            android:id="@+id/Impostazioni"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:padding="7dp"
            android:background="@color/white">
            <Button
                android:id="@+id/impostazioniMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/impostazioni"
                tools:ignore="ButtonStyle"/>
            <Button
                android:id="@+id/contattiMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contatti"
                tools:ignore="ButtonStyle"
                android:layout_marginTop="11dp"/>
            <Button
                android:id="@+id/aiutoMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aiuto"
                tools:ignore="ButtonStyle"
                android:layout_marginTop="11dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zoomview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="400dp"
            android:background="@color/white"
            tools:ignore="RtlHardcoded">
            <Button
                android:id="@+id/btp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:text="@string/Piu"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"
                android:background="@color/white"/>
            <Button
                android:id="@+id/btm"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="@string/Minus"
                tools:ignore="ButtonStyle"
                android:background="@color/white"/>
        </LinearLayout>
        <Button
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="530dp"
            android:id="@+id/filtri"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/filtri"
            tools:ignore="ButtonStyle,RtlHardcoded"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="240dp"
            tools:ignore="RtlHardcoded"
            android:padding="5dp"
            android:id="@+id/filtrilayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Filtri"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="35sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    tools:ignore="HardcodedText" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Button
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/chiudifiltri"
                    android:textSize="16sp"
                    android:text="@string/x"
                    tools:ignore="ButtonStyle"
                    android:background="@color/white"/>
            </LinearLayout>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_marginTop="15dp">
            </Spinner>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/cb1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@string/concerto">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/sport">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/gastronomia">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/convegno">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/mostra">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/spettacolo">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/outdoor">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/escursione">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/networking">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/cb10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:text="@string/educazione">
                    </CheckBox>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/resetFiltri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/reset_filtri"
                    tools:ignore="ButtonStyle">

                </Button>
                <Button
                    android:id="@+id/applicaFiltri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/applica_filtri"
                    tools:ignore="ButtonStyle">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>