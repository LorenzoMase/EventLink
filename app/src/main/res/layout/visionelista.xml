<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/rounded_bottom_background_realwhite">
    <LinearLayout
        android:id="@+id/linearEventoLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/immagine_Evento1"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/niente"
            android:scaleType="fitXY" >
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="7dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </View>
            <TextView
                android:id="@+id/pUtente_DescrizioneEvento1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visita_guidata_colosseo_n_n5_maggio_14_00"
                android:textSize="17sp">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1">

            </View>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
