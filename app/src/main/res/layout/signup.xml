<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:orientation="horizontal">

        <!-- Primo bottone -->
        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="1dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icons8_menu_192___"
            android:contentDescription="contentDescription"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!-- Secondo bottone -->
        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="1dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icons8_account_96__1_"
            android:contentDescription="contentDescription"
            tools:ignore="HardcodedText" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--scritta Registrati-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25sp"
            android:text="Registrati"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold" />

        <!--sezione nome-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nome"
            android:layout_marginLeft="100sp"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="text"
            android:background="@color/white"
            android:hint="Inserisci nome"
            android:layout_marginLeft="100sp"
            android:padding="1sp"
            />

        <!--sezione cognome-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="Cognome"
            android:textStyle="bold"
            android:layout_marginLeft="100sp"
            android:textSize="20sp"
            android:layout_marginTop="20sp"/>

        <EditText
            android:id="@+id/editTextCognome"
            android:layout_width="200sp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Inserisci cognome"
            android:background="@color/white"
            android:layout_marginLeft="100sp"
            android:padding="1sp"/>

        <!--sezione data di nascita-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="190dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="15sp"
            android:text="Data di nascita"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDDNascita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleziona data di nascita"
            android:layout_marginLeft="90sp"/>

        <!--sezione email-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Email"
            android:layout_marginLeft="100sp"
            android:textSize="20sp"
            android:layout_marginTop="10sp"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="200sp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Inserisci Email"
            android:background="@color/white"
            android:layout_marginLeft="100sp"
            android:padding="1sp"/>

        <!--sezione numero di telefono-->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="196dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:text="Numero di telefono"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="200sp"
            android:minHeight="48dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Inserisci cognome"
            android:background="@color/white"
            android:layout_marginLeft="100sp"
            android:padding="1sp"/>


        <!--bottone Signup -->
        <Button
            android:id="@+id/buttonSignup"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Registrati"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="80sp"
            />
    </LinearLayout>

</LinearLayout>
